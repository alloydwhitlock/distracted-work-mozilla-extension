{
  "name": "distracted-work-extension",
  "version": "1.0.0",
  "description": "Firefox/Zen extension for distracted.work - a productivity site blocker with professional humor",
  "private": true,
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "web-ext lint --source-dir=extension",
    "build": "web-ext build --source-dir=extension --artifacts-dir=dist",
    "start": "web-ext run --source-dir=extension --firefox=firefox"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "web-ext": "^8.4.0"
  }
}
